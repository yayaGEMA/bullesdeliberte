{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<form method="POST" class="col-lg-4 offset-lg-4 mt-5">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">se déconnecter</a>
        </div>
    {% endif %}

    <h1 class="my-3 font-weight-normal text-light text-center">Connectez-vous</h1>
    <label class="text-light" for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label class="text-light" for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary mt-4 col-10 offset-1 col-md-6 offset-md-3" type="submit">
        Se connecter
    </button>
</form>

<div class="row w-100 ml-0 mt-2">
    <div class="col-12 text-center">
        <a href="{{ path('forgot_password_request') }}">Mot de passe oublié ?</a>
    </div>
</div>

{% endblock %}
