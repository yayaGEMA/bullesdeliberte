{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="row w-100 ml-0">
        <h1 class="col-8 offset-2 col-lg-4 offset-lg-4 text-body text-center mt-3">Bienvenue parmi les Bulles</h1>
    </div>

    <div class="row w-100 my-2 ml-0">
        <p class=" col-8 offset-2 col-lg-4 offset-lg-4 text-center text-body small">Tous les champs comportant un astérisque (*) sont obligatoires.</p>
    </div>

    <div class="row w-100 mb-5 ml-0">
        <div class="col-12 col-sm-8 offset-sm-2 col-lg-4 offset-lg-4 text-body mb-5">
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
                <div class="form-group g-recaptcha-parent">
                    <div class="g-recaptcha" data-sitekey="{{ google_recaptcha_site_key }}"></div>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}