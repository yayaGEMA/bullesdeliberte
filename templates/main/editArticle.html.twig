{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .donation img{
            display: none;
        }
    </style>
{% endblock %}

{% block title %}Modifier un article{% endblock %}

{% block body %}

    <div class="row">
        <h1 class="col-12 text-center text-light my-4">Modifier un article</h1>
    </div>

    <div class="row mb-5">
        <div class="col-12 col-md-8 offset-md-2 text-light mb-5">
            {# Affichage du form de cr√©ation d'un new article #}
            {{ form_start(form) }}
                {{form_row(form.title)}}
                {{form_row(form.description)}}
                <div class="row mx-1 d-flex justify-content-around">
                    {{form_row(form.dateBeginning)}}
                    {{form_row(form.dateEnd)}}
                </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}